#include<stdio.h>
#include<conio.h>
void main()
{
int n,m,a[20][20],c[20][20],b[20][20],i,j;
clrscr();
printf("enter the value of n\n");
scanf("%d",&n);
printf("enter the value of m\n");
scanf("%d",&m);
printf("enter the first matrix\n");
for(i=0;i<n;i++)
 {
  for(j=0;j<m;j++)
   {
    scanf("%d",&a[i][j]);
   }
 }
  printf("enter the second array\n");
  for(i=0;i<n;i++)
 {
  for(j=0;j<m;j++)
   {
    scanf("%d",&b[i][j]);
   }
 }
 printf("the first matrix\n");
 for(i=0;i<n;i++)
 {
  for(j=0;j<m;j++)
   {
    printf("%d\t",a[i][j]);
   }
  printf("\n");
  }
  printf("the second matrix is\n");
  for(i=0;i<n;i++)
 {
  for(j=0;j<m;j++)
   {
    printf("%d\t",b[i][j]);
   }
 printf("\n");
 }
 for(i=0;i<n;i++)
 {
  for(j=0;j<m;j++)
   {
    c[i][j]=a[i][j]+b[i][j];
   }
 }
 printf("matrix after addition is\n");
 for(i=0;i<n;i++)
 {
  for(j=0;j<m;j++)
   {
    printf("%d\t",c[i][j]);
   }
 printf("\n");
 }
 for(i=0;i<n;i++)
 {
  for(j=0;j<m;j++)
   {
    c[i][j]=a[i][j]-b[i][j];
   }
 }
 printf("matrix after subtraction\n");
 for(i=0;i<n;i++)
 {
  for(j=0;j<m;j++)
   {
    printf("%d\t",c[i][j]);
   }
   printf("\n");
 }
 getch();
 }
